CREATE TABLE IF NOT EXISTS admin (
    id SERIAL PRIMARY KEY,
    name VARCHAR(255)
);

CREATE TABLE IF NOT EXISTS users (
    id SERIAL PRIMARY KEY,
    login VARCHAR(255) UNIQUE,
    password VARCHAR(255)
);

CREATE TABLE IF NOT EXISTS products (
    id INT PRIMARY KEY,
    name VARCHAR(255),
    price DECIMAL(10, 2),
    category VARCHAR(255)
);

CREATE TABLE IF NOT EXISTS monitors (
    id int PRIMARY KEY,
    price DECIMAL(10, 2),
    name VARCHAR(255),	
    response_time VARCHAR(255),
    display DECIMAL(10, 2),
    display_hz INT,
    matrix VARCHAR(255),
    resolution VARCHAR(255),
    color_depth VARCHAR(255),
    brightness INT
);

CREATE TABLE IF NOT EXISTS motherboards (
    id int PRIMARY KEY,
    price DECIMAL(10, 2),
    name VARCHAR(255),
    socket VARCHAR(255),
    chipset VARCHAR(255),
    max_ram INT,
    type_ram VARCHAR(255),
    form_factor VARCHAR(255),
    max_ram_hz INT,
    audio_chip VARCHAR(255)
);

CREATE TABLE IF NOT EXISTS laptops (
    id int PRIMARY KEY,
    price DECIMAL(10, 2),
    name VARCHAR(255),
    brand VARCHAR(255),
    processor_model VARCHAR(255),
    ram INT,
    ssd INT,
    display DECIMAL(10, 2),
    display_hz VARCHAR(255),
    video_card VARCHAR(255)
);

CREATE TABLE IF NOT EXISTS personal_computers (
    id int PRIMARY KEY,
    price DECIMAL(10, 2),
    name VARCHAR(255),
    ssd INT,
    video_card VARCHAR(255),
    processor VARCHAR(255),
    ram INTEGER,
    storage INTEGER
);


CREATE TABLE IF NOT EXISTS user_data (
    id SERIAL PRIMARY KEY,
    user_id INTEGER,
    cart TEXT[],
    favorites TEXT[]
);


